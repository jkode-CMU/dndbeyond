[package]
name = "dnd-beyond-desktop"
version = "1.0.0"
description = "A desktop version of D&D Beyond character management"
authors = ["you"]
license = ""
repository = ""
edition = "2021"

# See more keys and their definitions at https://doc.rust-lang.org/cargo/reference/manifest.html

[build-dependencies]
tauri-build = { version = "2.5", features = [] }

[dependencies]
serde = { version = "1", features = ["derive"] }
serde_json = "1"
tauri = { version = "2.5", features = [] }
tauri-plugin-fs = "2.3.3"
tauri-plugin-shell = "2.3.3"
zip = "0.6"
dirs = "5.0"

[features]
# This feature is used for production builds or when `devPath` points to the filesystem
custom-protocol = ["tauri/custom-protocol"]

# Tauri metadata: enable shell.open via package.metadata so the CLI validator
# (which may expect v1-style `tauri.conf.json`) sees the allowlist without
# requiring a full v2 `tauri.conf.json` migration.
[package.metadata.tauri.bundle]
identifier = "com.dnd-beyond.desktop"

[package.metadata.tauri.allowlist.shell]
open = true
